{
  "package": {
    "productName": "HandDraw",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$HOME/**", "$APPDATA/**", "$APPLOCALDATA/**"]
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "identifier": "com.handdraw.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "targets": ["appimage", "deb", "dmg", "nsis"],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Graphics",
      "shortDescription": "Hand-draw animation tool",
      "longDescription": "Create whiteboard and chalkboard hand-draw animations with SVG and audio sync.",
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "13.0",
        "exceptionDomain": "",
        "entitlements": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "HandDraw",
        "width": 1600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ]
  }
}
